@model IEnumerable<Ator>

<div class="row">
    <div class="col-md-10 offset-md-1">

        <h1> Atores- 
        <a class="btn btn-dark" href="#">
            Cadastrar

        </a>
        </h1>
        
        <div class="col-12 my-2">
            <input class="form-control" type="text" name="nome" id="nome" placeholder="Buscar..."/>
        </div>


        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Foto de Perfil</th>
                    <th>Nome</th>
                    <th>Biografia</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ator in Model)
                {
                    
                <tr>
                    <td>
                        <div class="d-flex flex-column">

                        <a class="btn btn-outline-success" href="#">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>

                        <a class="btn btn-outline-danger mt-1" href="#">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>

                        <a class="btn btn-outline-primary mt-1" href="#">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        </div>
                    </td>



                    <td class="align-middle">
                        <img src="@ator.FotoPerfilURL" style="max-width:100px" alt="@ator.Nome">
                    </td>
                    <td class="align-middle">@ator.Nome</td>
                    <td class="align-middle">@ator.Bio</td>

                </tr>
                }
            </tbody>
        </table>

    </div>
</div>